# test_blazedemo_boston_berlin.py
"""
Automatyczny test: BostonÂ â†’Â Berlin naÂ https://www.blazedemo.com

â€¢ pytest -q                          â†’ okno zamyka siÄ™ poÂ 5â€¯s
â€¢ pytest -q --hold-browser           â†’ okno: 30â€¯s + 5â€¯s = 35â€¯s
"""

import time, pytest
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import Select, WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

URL   = "https://www.blazedemo.com"
TITLE = "BlazeDemo"

# ---------- fixture webdriver ---------- #
@pytest.fixture
def driver(request):
    drv = webdriver.Chrome()
    drv.maximize_window()
    yield drv

    # â‡£  uniwersalna pauza 5â€¯s
    print("\nâ³  ZatrzymujÄ™ okno na 5Â sekundâ€¦")
    time.sleep(5)

    # opcjonalna dÅ‚uÅ¼sza pauza 30â€¯s
    if request.config.getoption("--hold-browser", default=False):
        print("ğŸ”µ  --hold-browser: dodatkowe 30â€¯s.")
        try:
            time.sleep(30)
        except KeyboardInterrupt:
            pass
    drv.quit()

# ---------- wÅ‚aÅ›ciwy test -------------- #
def test_search_boston_to_berlin(driver):
    driver.get(URL)
    WebDriverWait(driver, 10).until(EC.title_is(TITLE))

    Select(driver.find_element(By.NAME, "fromPort")).select_by_visible_text("Boston")
    Select(driver.find_element(By.NAME, "toPort")).select_by_visible_text("Berlin")
    driver.find_element(By.CSS_SELECTOR, "input[type='submit']").click()

    WebDriverWait(driver, 10).until(EC.url_contains("/reserve.php"))
    header = driver.find_element(By.TAG_NAME, "h3").text
    assert "Flights from Boston to Berlin" in header

    rows = driver.find_elements(By.CSS_SELECTOR, "table.table tbody tr")
    assert len(rows) >= 1, "Tabela wynikÃ³w powinna zawieraÄ‡ co najmniej 1 wiersz"
