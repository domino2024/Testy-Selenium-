import time
import pytest
from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager

@pytest.fixture
def driver():
    service = Service(ChromeDriverManager().install())
    options = webdriver.ChromeOptions()
    # options.add_argument('--headless')  # odkomentuj, jeśli nie chcesz widzieć okna
    options.add_argument('--no-sandbox')
    options.add_argument('--disable-dev-shm-usage')
    driver = webdriver.Chrome(service=service, options=options)
    yield driver
    driver.quit()

def test_open_selenium_shop(driver):
    url = "http://www.selenium-shop.pl/"
    driver.get(url)
    # dodatkowe oczekiwanie na pełne załadowanie
    time.sleep(5)
    assert driver.current_url.startswith(url), (
        f"Oczekiwano URL zaczynającego się od {url}, otrzymano {driver.current_url}"
    )
